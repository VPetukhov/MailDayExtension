{
    "manifest_version": 2,
    "name": "Mail Days",
    "description": "Mail-Day counter",
    "version": "1.0",
    "author": "Viktor Petukhov",
    "applications": {
        "gecko": {
            "id": "MailDayExtension@vpetukhov.github.com",
            "strict_min_version": "68.2"
        }
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "MD",
        "default_icon": "images/internet-32px.png"
    },
    "permissions": [
        "accountsRead",
        "messagesRead"
    ],
    "icons": {
        "64": "images/internet.png",
        "32": "images/internet-32px.png",
        "16": "images/internet-16px.png"
    }
}